<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ZipWarAirGanon.Views.ValutazioneBeni">
  <StackLayout VerticalOptions="Center" Padding="20,0,20,0">
    <Label Text="{Binding Title}" FontSize="20" />
    <Label Text="{Binding Text}" />
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Button Text="{Binding LeftButtonText}" Command="{Binding LeftButtonCommand}" Grid.Column="0" />
      <Button Text="{Binding RightButtonText}" Command="{Binding RightButtonCommand}" Grid.Column="1" />
    </Grid>
  </StackLayout>
</ContentPage>
